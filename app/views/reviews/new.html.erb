<%= form_for [@wine, Review.new] do |f|%>

<div class="field">
    <%= f.label :comments%><br>
    <%= f.text_field :comments %>
</div>

<div class="field">
    <%= f.label :paired_with %><br>
    <%= f.text_field :paired_with %>
</div>

<div class="field">
    <%= f.label :rating %><br>
    <%= f.text_area :rating %>
</div>

<div class="actions">
    <%= f.submit %>
</div>

<% end %>
