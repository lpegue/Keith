<h1>Wines Reviewed By Visitors To Our Site</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Predominant Variety</th>
      <th>Vintage</th>
      <th>Country</th>
      <th>Region</th>
      <th>Producer</th>
      <th>Vineyard</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.predominant_variety %></td>
        <td><%= wine.vintage %></td>
        <td><%= wine.country %></td>
		    <td><%= wine.region %></td>
		    <td><%= wine.producer %></td>
		    <td><%= wine.vineyard %></td>
        <td><%= link_to 'Show & Review', wine_path(wine) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

